!!! 5
html
	head
		title ..:: Sector : Node ::..
		link(type="text/css", rel="stylesheet", href="Css/main.css")
		link(rel='icon', href='/images/siteicon.png')
		script(type="text/javascript", src="/socket.io/socket.io.js")
		script(type="text/javascript", src="/Script/Network/Login.js")
	body
		block titi
		#login-container.window
			#login-title
				h1 ..:: Sector : Node ::..
				#server-msg
					span Server Status :
					#server.offline
			#login-form
				p Enter your Username
				input(type="text", name="user", autofocus="on" ,placeholder="Username", onkeydown="EnterKey(event)")#login.text-field
				#submit.button
					a(onClick="Loading()") Login
			#loading.hidden
				span Connection: 
				progress(min=0, max=100)
		#connected-users.window.hidden Connected Players
		#local-user-menu.window.hidden
			#local-user
			#menu
				.button
					a(onclick="createParty()") Create Party